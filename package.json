{
  "name": "secrets-management-demo",
  "version": "1.0.0",
  "description": "Didactic project comparing HashiCorp Vault and AWS Secrets Management using LocalStack",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "demo:vault": "cross-env SECRET_PROVIDER=vault pnpm dev",
    "demo:localstack": "cross-env SECRET_PROVIDER=localstack USE_LOCALSTACK=true pnpm dev",
    "setup:vault": "tsx scripts/setup-vault.ts",
    "setup:localstack": "tsx scripts/setup-localstack.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "secrets-management",
    "vault",
    "aws",
    "localstack",
    "fastify",
    "zod",
    "devops"
  ],
  "author": "Marcel KAled",
  "license": "MIT",
  "dependencies": {
    "fastify": "^5.6.2",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@scalar/fastify-api-reference": "^1.39.3",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6",
    "node-vault": "^0.10.9",
    "@aws-sdk/client-secrets-manager": "^3.931.0",
    "@aws-sdk/client-ssm": "^3.931.0",
    "@aws-sdk/client-kms": "^3.931.0",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.2",
    "dotenv": "^16.6.1"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}

