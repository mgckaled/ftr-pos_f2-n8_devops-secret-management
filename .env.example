# Application Configuration
NODE_ENV=development
PORT=3000

# Secret Provider: 'vault' or 'localstack'
SECRET_PROVIDER=vault

# Vault Configuration (when SECRET_PROVIDER=vault)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=root
VAULT_SECRET_PATH=secret/data/widget-server

# AWS/LocalStack Configuration (when SECRET_PROVIDER=localstack)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_SECRET_NAME=/widget-server/secrets

# LocalStack Specific
USE_LOCALSTACK=false
LOCALSTACK_ENDPOINT=http://localhost:4566

# Note: Actual secrets (DATABASE_PASSWORD, API keys, etc.)
# are loaded from Vault or LocalStack, NOT from this file!
